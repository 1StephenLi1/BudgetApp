<!DOCTYPE html>
<html>
<head>
    <% include includes/head.ejs %>
    <link rel="stylesheet" type="text/css" href="css/custom.css">    

    <style>
        </style>
</head>
<!-- template from: https://www.bootply.com/sY7gQy6XF7 -->
<% include includes/top-nav.ejs %>
<% include includes/side-nav.ejs %>

<script type="text/javascript">
function displayPic()
{
  var imgs = document.getElementsByTagName("img");
  for(var i=0, l=imgs.length;i<l;i++){
    imgs[i].src = "/images/profilePic-2.png";
  }
}
</script>



<body onload ="displayPic()" class="hold-transition skin-black fixed sidebar-mini">
    <div class="wrapper">
        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">
            <!-- Content Header (Page header) -->
            <section class="content-header">
                <div class="col-sm-12 content-header">
                    <h1><%= title %></h1>
                    <div id="messageBox" class="alert alert-danger" style="display:none"></div>                    
                </div>
            </section>
            <!-- Main content -->
            <div class="container">
                      <hr>
                    <div class="row">
                      <!-- left column -->
                      <div class="col-md-3">
                        <div class="text-center">
                          <br>
                          <img src="displayPic.jpg" class="avatar img-circle" alt="" id="profilePicSettings" width="180">
                          <h6>Upload a profile photo...</h6>
                          <h6><%= user.profilePic %> <%= user.lastName %></h6>                         
                          <form method="post" enctype="multipart/form-data" action="settings/uploadPhoto">
                          <input type="file" class="form-control" name="profilePic">
                          <input type="submit" class="form-control" value="Update Photo" style="color:white; background:#3c8dbc"> 
                          </form>                         
                        </div>
                      </div>
                      
                      <!-- edit form column -->
                      <div class="col-md-9 personal-info">
                        <form class="form-horizontal" id="editSettingsForm" onsubmit="editSettings(); return false;" role="form">
                          <div class="form-group">
                            <label class="col-lg-3 control-label">First Name:</label>
                            <div class="col-lg-8">
                              <input class="form-control" type="text" name=firstName>
                            </div>
                          </div>
                          <div class="form-group">
                            <label class="col-lg-3 control-label">Last Name:</label>
                            <div class="col-lg-8">
                              <input class="form-control" type="text" name=lastName>
                            </div>
                          </div>
                          <div class="form-group">
                            <label class="col-lg-3 control-label">Email:</label>
                            <div class="col-lg-8">
                              <input class="form-control" type="text" name=email>
                            </div>
                          </div>
                          <div class="form-group">
                            <label class="col-md-3 control-label">Password:</label>
                            <div class="col-md-8">
                              <input class="form-control" type="password" name=password id=password>
                            </div>
                          </div>
                          <div class="form-group">
                            <label class="col-md-3 control-label">Confirm password:</label>
                            <div class="col-md-8">
                              <input class="form-control" type="password" name=confirmPassword id=confirmPassword>
                            </div>
                          </div>
                          <div class="form-group">
                            <label class="col-md-3 control-label"></label>
                            <div class="col-md-8">
                              <button type="submit" class="btn btn-primary">Save Changes</button>
                              <span></span>
                              <input type="reset" class="btn btn-default" value="Cancel">
                            </div>
                          </div>
                        </form>
                      </div>
                  </div>
                </div>
                <hr>

            <!-- /.content -->
        </div>
        <!-- /.content-wrapper -->

        <% include includes/footer.ejs %>

    </div>
    <!-- ./wrapper -->

    <% include includes/jsDefaults.ejs %>
    <script type="text/javascript" src="/javascripts/editSettings.js"></script>
    
</body>
</html>
