<!DOCTYPE html>
<html>
<head>
    <% include includes/head.ejs %>
</head>

<body class="hold-transition skin-black fixed sidebar-mini">
    <div class="wrapper">

        <% include includes/top-nav.ejs %>
        <% include includes/side-nav.ejs %>

        <div class="content-wrapper container-fluid">
        <!-- Main content -->
        <h1><%= title %></h1>
        <div id="messageBox" class="alert alert-danger" style="display:none"></div>

        <div class="row">
            <div id="expenseMsg"></div>
            <div class="box box-primary">
            <form id="addExpenseForm" onsubmit="addExpense(); return false;">
                <div class="box-body">
                    <div class="row">
                        <div class="col-md-4 form-group">
                            <label for="category">Category</label>
                            <input type="text" class="form-control typeahead tt-menu" autocomplete="off" data-toggle="tooltip" data-trigger="manual" id="category" name="category" maxLength=30 placeholder="e.g. Food">
                        </div>
                        <div class="col-md-4 form-group">
                            <label for="amount">Amount</label>
                            <div class="input-group">
                                <span class="input-group-addon">$</span>
                                <input type="number" class="form-control" id="amount" name="amount" min="0" step="0.50" value="0.00" autocomplete="off"/>
                            </div>
                        </div>
                        <div class="col-md-4 form-group">
                            <label for="expenseDate">Expense Date</label>
                            <div class="input-group">
                                <span class="input-group-addon"><i class="glyphicon glyphicon-calendar fa fa-calendar"></i></span>
                                <input type="text" name="expenseDate" id="expenseDate" class="form-control">
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-4 form-group">
                            <label for="shortDescription">Short Description</label>
                            <input type="text" class="form-control typeahead tt-menu" autocomplete="off" data-toggle="tooltip" data-trigger="manual" id="shortDescription" name="shortDescription" maxLength=30 placeholder="e.g. McDonalds (optional)">
                        </div>
                        <div class="col-md-8 form-group">
                            <label>Long Description</label>
                            <textarea class="form-control" id="longDescription" name="longDescription" rows="3" placeholder="e.g. Big Mac (optional)"></textarea>
                        </div>
                    </div>
                    <!-- /.box-body -->
                </div>
                <div class="box-footer">
                  <a href="/expenses/uploadCsv">Import Expenses via CSV</a>
                  |
                  <a href="/expenses/export">Export Expenses via CSV</a>
                  <button type="submit" class="btn btn-primary pull-right">Add Expense</button>
                </div>
            </form>
        </div>
            <!-- /.content -->
    </div>
        <!-- /.content-wrapper -->

        <% include includes/footer.ejs %>

</div>
</div>
    <!-- ./wrapper -->
    <% include includes/jsDefaults.ejs %>

    <script type="text/javascript" src="/javascripts/addExpense.js"></script>

</body>
</html>
