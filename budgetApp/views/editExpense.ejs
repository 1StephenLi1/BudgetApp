<!DOCTYPE html>
<html>
<head>
    <% include includes/head.ejs %>
</head>

<body class="hold-transition skin-black fixed sidebar-mini">
    <div class="wrapper">

        <% include includes/top-nav.ejs %>
        <% include includes/side-nav.ejs %>

        <div class="content-wrapper container-fluid">
        <!-- Main content -->
        <h1><%= title %></h1>
            <div id="messageBox" class="alert alert-danger" style="display:none"></div>
            
        <div class="box box-primary">
        <form method="post" action="/expenses/editExpense">
            <div class="box-body">
                <div class="row">
                    <div class="col-md-4 form-group">
                        <label for="category">Category</label>
                        <input type="text" class="form-control typeahead tt-menu" autocomplete="off" data-toggle="tooltip" data-trigger="manual" id="category" name="category" maxLength=30 value="<%= category.name %>">
                    </div>
                    <div class="col-md-4 form-group">
                        <label for="amount">Amount</label>
                        <div class="input-group">
                            <span class="input-group-addon">$</span>
                            <input type="number" class="form-control" id="amount" name="amount" min="0" step="0.50" value="<%= cashflow.amount %>" autocomplete="off" />
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-4 form-group">
                        <label for="shortDescription">Short Description</label>
                        <% if (cashflow.shortDescription.length != 0) {%>
                        <input type="text" class="form-control typeahead tt-menu" autocomplete="off" data-toggle="tooltip" data-trigger="manual" id="shortDescription" name="shortDescription" maxLength=30 value="<%= cashflow.shortDescription %>">
                        <% } else {%>
                            <input type="text" class="form-control typeahead tt-menu" autocomplete="off" data-toggle="tooltip" data-trigger="manual" id="shortDescription" name="shortDescription" maxLength=30 placeholder="please enter short description (optional)">
                        <% } %>
                    </div>
                    <div class="col-md-8 form-group">
                        <label>Long Description</label>
                        <% if (cashflow.longDescription != null) {%>
                        <textarea class="form-control" id="longDescription" name="longDescription" rows="3" value="<%=cashflow.longDescription%>"></textarea>
                        <% } else { %>
                            <textarea class="form-control" id="longDescription" name="longDescription" rows="3" placeholder="please enter long description (optional)"></textarea>
                        <% } %>
                    </div>
                </div>
                <!-- /.box-body -->
            </div>
            <div class="box-footer">
              <button type="submit" class="btn btn-primary pull-right">Edit Expense</button>
            </div>
        </form>
    </div>
            <!-- /.content -->
    </div>
        <!-- /.content-wrapper -->

        <% include includes/footer.ejs %>

</div>
</div>
    <!-- ./wrapper -->
    <% include includes/jsDefaults.ejs %>

    <script type="text/javascript" src="/javascripts/expenses/addExpense.js"></script>

</body>
</html>