<body class="hold-transition login-page">
        <div class="login-box">                
        <!-- /.login-logo -->
        <div class="login-box-body">
            <p class="login-box-msg">Reset your password</p>

            <form id="login" action="/login", method="post">
                <div class="form-group has-feedback">
                    <input type="text" name="email" class="form-control" placeholder="New Password" required autofocus>
                    <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
                </div>
                <div class="form-group has-feedback">
                        <input type="text" name="email" class="form-control" placeholder="Confirm New Password" required autofocus>
                        <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
                    </div>
             
                <div class="row">
                    <!-- /.col -->
                    <div class="col-xs-offset-4 col-xs-4">
                        <button type="submit" class="btn btn-primary btn-block btn-flat">Reset</button>
            
                </div>
            </div>
        </form>
</div>
    </div>
    <!-- /.login-box-body -->
    <% include includes/jsDefaults.ejs %>

</body>
</html>
