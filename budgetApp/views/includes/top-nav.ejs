<!-- Main Header -->
<header class="main-header">

  <!-- Logo -->
  <a href="/" class="logo">
    <!-- mini logo for sidebar mini 50x50 pixels -->
    <span class="logo-mini"><b>B</b>A</span>
    <!-- logo for regular state and mobile devices -->
    <span class="logo-lg"><b>Budget</b>App</span>
  </a>

  <!-- Header Navbar -->
  <nav class="navbar navbar-static-top" role="navigation">
    <!-- Sidebar toggle button-->
    <a href="#" class="sidebar-toggle" data-toggle="offcanvas" role="button">
      <span class="sr-only">Toggle navigation</span>
    </a>
    <!-- Navbar Right Menu -->
    <div class="navbar-custom-menu">
      <ul class="nav navbar-nav">
        <!-- User Account Menu -->
        <li class="dropdown user user-menu">
          <!-- Menu Toggle Button -->
          <a href="#" class="dropdown-toggle" data-toggle="dropdown">
            <!-- The user image in the navbar-->
            <img src="" class="user-image" alt="" id="profilePicTop" onerror="this.src='/images/user-icon-placeholder.png';">
            <!-- hidden-xs hides the username on small devices so only the image appears. -->
            <span class="hidden-xs"><%= user.firstName %> <%= user.lastName %></span>
          </a>
          <ul class="dropdown-menu">
            <!-- The user image in the menu -->
            <li class="user-header">
              <img src="" class="img-circle" alt="" id="profilePicNavDropDown" onerror="this.src='/images/user-icon-placeholder.png';">
              <p>
                <%= user.firstName %> <%= user.lastName %>
              </p>
            </li>
            <!-- Menu Footer-->
            <li class="user-footer">
              <div class="pull-left">
                <a href="/settings" class="btn btn-default btn-flat">Settings</a>
              </div>
              <div class="pull-right">
                <a href="/users/signout" class="btn btn-default btn-flat">Sign out</a>
              </div>
            </li>
          </ul>
        </li>
      </ul>
    </div>
  </nav>
</header>

<script type="text/javascript">
  function displayPicTop()
  {
  document.getElementById('profilePicTop').src = "/images/profilePic-"+<%= user.id%>+".png";
  document.getElementById('profilePicNavDropDown').src = "/images/profilePic-"+<%= user.id%>+".png";
  }
  displayPicTop();
</script>
